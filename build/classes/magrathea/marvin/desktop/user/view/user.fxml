<AnchorPane fx:id="pane" minHeight="680.0" maxHeight="680.0" maxWidth="1020.0" 
            styleClass="background" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="magrathea.marvin.desktop.user.controller.UserController">
    <stylesheets>
        <URL value="@user.css"/>
    </stylesheets>
    <children>
        <VBox maxHeight="680" prefWidth="1020">
            <!-- <Label text="Users" prefHeight="50">
                <font>
                    <Font name="System Bold" size="24.0" />
