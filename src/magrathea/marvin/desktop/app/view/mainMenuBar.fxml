<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import java.net.URL?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<!-- 
    Select the different options in the App.
    The controller call different view in the action pane
    @author: Iván Cañizares Gómez
    TODO: Change menu style for Ribbon style like design
    TODO: Refactor all style annotations in a css file. Like padding and margin
    TODO: Refactor all hardcode Strings for i18N
-->
<AnchorPane fx:id="ribbonPane" minHeight="120.0" maxHeight="120.0" minWidth="800" maxWidth="1000.0" 
            styleClass="background" xmlns="http://javafx.com/javafx/8.0.65" 
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="magrathea.marvin.desktop.app.controller.MainMenuBarController">
    <stylesheets>
        <URL value="@css/marvin.css"/>
    </stylesheets>
    
    <VBox>
        <MenuBar id="mainMenuBar" 
                 prefHeight="30.0" 
                 prefWidth="1000">
            <menus>
                <Menu mnemonicParsing="false" text="Marvin">
                    <items>
                        <MenuItem fx:id="displayMain" mnemonicParsing="false" onAction="#switchToMain" text="View main" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Tournament">
                    <items>
                        <MenuItem fx:id="displayTournament" mnemonicParsing="false" onAction="#switchToTournament" text="View Tournament" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="User">
                    <items>
                        <MenuItem fx:id="displayUser" mnemonicParsing="false" onAction="#switchToUser" text="View User" />
                    </items>
                    <items>
                        <MenuItem fx:id="insertUser" mnemonicParsing="false" onAction="#switchToInsertUser" text="Insert new User" />
                    </items>
                </Menu>
    
    
                <Menu mnemonicParsing="false" text="Game">
                    <items>
                        <MenuItem fx:id="displayGame" 
                                  mnemonicParsing="false" 
                                  onAction="#switchToGame" 
                                  text="View Game" />
                    </items>
                </Menu>
    
    
                <Menu mnemonicParsing="false" text="Config">
                    <items>
                        <MenuItem fx:id="Configuration" mnemonicParsing="false" onAction="#switchToConfiguration" text="Configuration" />
                    </items>
                    <items>
                        <MenuItem fx:id="Host" mnemonicParsing="false" onAction="#switchToHost" text="Host" />
                    </items>
                    <items>
                        <MenuItem fx:id="loginout" mnemonicParsing="false" onAction="#loginOut" text="Login Out" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <HBox fx:id="ribbonBox" minHeight="90.0" maxHeight="90.0" maxWidth="1000.0">    
            <fx:define>
                <ToggleGroup fx:id="albumViewToggleGroup"/>
            </fx:define>
            <ToggleButton fx:id="homeButton" minHeight="100" prefWidth="100" onAction="#switchToMain" mnemonicParsing="false" selected="true" toggleGroup="$albumViewToggleGroup">
                <graphic>
                    <ImageView fitHeight="48" fitWidth="48" pickOnBounds="true" preserveRatio="true">
                        <image>       
                            <Image url="@icons/home.png" preserveRatio="false" smooth="false" />          
                        </image>
                    </ImageView>
                </graphic>
            </ToggleButton>
            <ToggleButton fx:id="tournamentButton" minHeight="100" prefWidth="100" onAction="#switchToTournament" mnemonicParsing="false" toggleGroup="$albumViewToggleGroup" >
                <graphic>
                    <ImageView fitHeight="48" fitWidth="48" pickOnBounds="true" preserveRatio="true">
                        <image>       
                            <Image url="@icons/tournament.png" preserveRatio="false" smooth="false" />          
                        </image>
                    </ImageView>
                </graphic>    
            </ToggleButton>
            <ToggleButton fx:id="userButton" minHeight="100" prefWidth="100" onAction="#switchToUser" mnemonicParsing="false" toggleGroup="$albumViewToggleGroup">
                <graphic>
                    <ImageView fitHeight="48" fitWidth="48" pickOnBounds="true" preserveRatio="true">
                        <image>       
                            <Image url="@icons/user.png" preserveRatio="false" smooth="false" />          
                        </image>
                    </ImageView>
                </graphic>
            </ToggleButton>
            <ToggleButton fx:id="gameButton" minHeight="100" prefWidth="100" onAction="#switchToGame" mnemonicParsing="false" toggleGroup="$albumViewToggleGroup">
                <graphic>
                    <ImageView fitHeight="48" fitWidth="48" pickOnBounds="true" preserveRatio="true">
                        <image>       
                            <Image url="@icons/dices.png" preserveRatio="false" smooth="false" />          
                        </image>
                    </ImageView>
                </graphic>
            </ToggleButton>
            <ToggleButton fx:id="configButton" minHeight="100" prefWidth="100"  onAction="#switchToConfiguration" mnemonicParsing="false" toggleGroup="$albumViewToggleGroup">
                <graphic>
                    <ImageView fitHeight="48" fitWidth="48" pickOnBounds="true" preserveRatio="true">
                        <image>       
                            <Image url="@icons/settings.png" preserveRatio="false" smooth="false" />          
                        </image>
                    </ImageView>
                </graphic>
            </ToggleButton>
            <ToggleButton fx:id="hostsButton" minHeight="100" prefWidth="100" onAction="#switchToHost" mnemonicParsing="false" toggleGroup="$albumViewToggleGroup">
                <graphic>
                    <ImageView fitHeight="48" fitWidth="48" pickOnBounds="true" preserveRatio="true">
                        <image>       
                            <Image url="@icons/hosts.png" preserveRatio="false" smooth="false" />          
                        </image>
                    </ImageView>
                </graphic>
            </ToggleButton>
            <ToggleButton fx:id="logoutButton" minHeight="100" prefWidth="100" onAction="#loginOut" mnemonicParsing="false" toggleGroup="$albumViewToggleGroup">
                <graphic>
                    <ImageView fitHeight="48" fitWidth="48" pickOnBounds="true" preserveRatio="true">
                        <image>       
                            <Image url="@icons/logout.png" preserveRatio="false" smooth="false" />          
                        </image>
                    </ImageView>
                </graphic>
            </ToggleButton>
        </HBox>
    </VBox>
</AnchorPane>

