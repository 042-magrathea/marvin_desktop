<AnchorPane fx:id="root_pane" prefWidth="1024.0" styleClass="root_pane" stylesheets="@../../app/view/css/marvin.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="magrathea.marvin.desktop.user.controller.UserController">

    <children>
        <VBox fx:id="root_vertical" styleClass="root_vertical" stylesheets="@../../app/view/css/marvin.css">
            <!-- <Label text="Users" prefHeight="50">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
                <padding>
                    <Insets bottom="10.0" left="20" top="10"/>
                </padding>
            </Label> -->
            <VBox fx:id="table_section" styleClass="table_section">
                <TableView fx:id="table_list_subsection" editable="true" styleClass="table_list_subsection">
                
                    <columns>
                        <TableColumn fx:id="userId" maxWidth="80.0" minWidth="30.0" prefWidth="60.0" text="ID" /> 
                        <TableColumn fx:id="nickname" maxWidth="200.0" minWidth="80.0" prefWidth="100.0" text="Nickname" /> 
                        <TableColumn fx:id="name" maxWidth="300.0" minWidth="80.0" prefWidth="100.0" text="name" /> 
                        <TableColumn fx:id="email" maxWidth="300.0" minWidth="100.0" prefWidth="150.0" text="Email" />
                        <TableColumn fx:id="phone" maxWidth="100.0" minWidth="80.0" prefWidth="90.0" text="phone" />
                        <TableColumn fx:id="userRole" maxWidth="120.0" minWidth="80.0" prefWidth="100.0" text="Role" /> 
                    </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
                </TableView>
                <HBox fx:id="table_tools_subsection" styleClass="table_tools_subsection">
                    <children>
                        <HBox fx:id="table_crud_buttons" styleClass="table_crud_buttons">
                            <Button fx:id="newUserButton" minWidth="30" mnemonicParsing="false" onAction="#onNewUser">
                                <styleClass>
                                    <String fx:value="icon_button_small" />
                                    <String fx:value="addUserSmall" />
                                </styleClass>
                            </Button>
                            <Button fx:id="editUserButton" minWidth="30" mnemonicParsing="false" onAction="#onEditUser">
                                <styleClass>
                                    <String fx:value="icon_button_small" />
                                    <String fx:value="editSmall" />
                                </styleClass>
                            </Button>
                            <Button fx:id="deleteUserButton" minWidth="30" mnemonicParsing="false" onAction="#onDeleteUser">
                                <styleClass>
                                    <String fx:value="icon_button_small" />
                                    <String fx:value="trashSmall" />
                                </styleClass>
                            </Button>
                            <Button fx:id="sendMailButton" minWidth="30" mnemonicParsing="false" onAction="#onSendMail">
                                <styleClass>
                                    <String fx:value="icon_button_small" />
                                    <String fx:value="sendMail" />
                                </styleClass>
                            </Button>
                        </HBox>
                  <Region styleClass="search_spacer" />
                        <HBox fx:id="table_search" alignment="CENTER_RIGHT" fillHeight="false" styleClass="table_search">
                            <TextField fx:id="searchField" maxWidth="330.0" minWidth="270" onAction="#onSearch" prefHeight="30.0" promptText="Insert a filter" />
                        </HBox>
                    </children>
                </HBox>
                
            </VBox>
            
            <HBox fx:id="form_aside_section" spacing="20.0" styleClass="form_aside_section">
                <VBox fx:id="form_subsection" styleClass="form_subsection">
                    <GridPane fx:id="form_grid" maxHeight="1000.0" styleClass="form_grid" vgap="2.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="180.0" minWidth="150.0" prefWidth="200.0" />
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="400.0" minWidth="200.0" prefWidth="250.0" />
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="35.0" minWidth="30.0" prefWidth="35.0" />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints maxHeight="30.0" minHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
                            <RowConstraints maxHeight="30.0" minHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
                            <RowConstraints maxHeight="30.0" minHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
                            <RowConstraints maxHeight="30.0" minHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
                            <RowConstraints maxHeight="30.0" minHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
                            <RowConstraints maxHeight="30.0" minHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
                            <RowConstraints maxHeight="30.0" minHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
                            <RowConstraints />
                        </rowConstraints>
                        <children>
                        
                            <Label styleClass="label-bright" text="nickname" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                <font>
                                    <Font name="System" size="16.0" />
                                </font>
                            </Label>
                            <TextField fx:id="nicknameField" promptText="Insert user's nickname" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="0" GridPane.rowSpan="2">
                                <padding>
                                    <Insets bottom="5" left="5" right="5" top="5" />
                                </padding>
                            </TextField>
                            <Label styleClass="label-bright" text="name" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                <font>
                                    <Font name="System" size="16.0" />
                                </font>
                            </Label>
                            <TextField fx:id="nameField" promptText="Insert user's complete name" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1" GridPane.rowSpan="2">
                                <padding>
                                    <Insets bottom="5" left="5" right="5" top="5" />
                                </padding>
                            </TextField>
                            <Label styleClass="label-bright" text="phone" GridPane.columnIndex="0" GridPane.rowIndex="2">
                                <font>
                                    <Font name="System" size="16.0" />
                                </font>
                            </Label>
                            <TextField fx:id="phoneField" promptText="Insert user's phone number" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="2">
                                <padding>
                                    <Insets bottom="5" left="5" right="5" top="5" />
                                </padding>
                            </TextField>
                            <Label styleClass="label-bright" text="email" GridPane.columnIndex="0" GridPane.rowIndex="3">
                                <font>
                                    <Font name="System" size="16.0" />
                                </font>
                            </Label>
                            <TextField fx:id="emailField" promptText="Insert user's email address" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="3">
                                <padding>
                                    <Insets bottom="5" left="5" right="5" top="5" />
                                </padding>
                            </TextField>  
                            <Label styleClass="label-bright" text="password" GridPane.columnIndex="0" GridPane.rowIndex="4">
                                <font>
                                    <Font name="System" size="16.0" />
                                </font>
                            </Label>
                            <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="4">
                                <padding>
                                    <Insets bottom="5" left="5" right="5" top="5" />
                                </padding>
                            </PasswordField>
                            <Label styleClass="label-bright" text="confirm pass" GridPane.columnIndex="0" GridPane.rowIndex="5">
                                <font>
                                    <Font name="System" size="16.0" />
                                </font>
                            </Label>
                            <PasswordField fx:id="passConfirmationField" GridPane.columnIndex="1" GridPane.rowIndex="5">
                                <padding>
                                    <Insets bottom="5" left="5" right="5" top="5" />
                                </padding>
                            </PasswordField>
                            <Button fx:id="resetPassButton" alignment="CENTER_RIGHT" onAction="#onPassReset" GridPane.columnIndex="2" GridPane.rowIndex="4">
                                <styleClass>
                                    <String fx:value="icon_button_small" />
                                    <String fx:value="reload" />
                                </styleClass>                            
                            </Button>
                            <Label id="languageLabel" styleClass="label-bright" text="language" GridPane.columnIndex="0" GridPane.rowIndex="6">
                                <font>
                                    <Font name="System" size="16.0" />
                                </font>
                            </Label>
                            <ChoiceBox fx:id="languageBox" GridPane.columnIndex="1" GridPane.rowIndex="6">
                                <HBox.margin>
                                    <Insets right="50.0" />
                                </HBox.margin>    
                            </ChoiceBox>
                            <Label id="roleLabel" styleClass="label-bright" text="role" GridPane.columnIndex="0" GridPane.rowIndex="7">
                                <font>
                                    <Font name="System" size="16.0" />
                                </font>
                            </Label>
                            <ChoiceBox fx:id="roleBox" GridPane.columnIndex="1" GridPane.rowIndex="7">
                                <HBox.margin>
                                    <Insets right="15.0" />
                                </HBox.margin> 
                            </ChoiceBox>
                        
                        </children>
                    </GridPane>
                     <Separator orientation="horizontal" styleClass="separator_grid">
                  <VBox.margin>
                     <Insets />
                  </VBox.margin>
               </Separator>
                    <HBox alignment="CENTER_RIGHT" fillHeight="false" styleClass="dynamic_buttons_form" GridPane.columnIndex="1" GridPane.rowIndex="8">
                         <Button fx:id="createUserButton" onAction="#onAction" text="Create user">
                             <HBox.margin>
                                 <Insets />
                             </HBox.margin>
                         </Button>
                         <Button fx:id="cancelButton" alignment="CENTER" onAction="#onCancel" text="cancel">
                             <HBox.margin>
                                 <Insets />
                             </HBox.margin>
                         </Button>
                    </HBox>
                </VBox>
            <TabPane fx:id="aside_subsection" side="BOTTOM" styleClass="aside_subsection">
               <tabs>
                  <Tab closable="false" text="Description">
                     <content>
                        <VBox fx:id="extraFields" styleClass="aside_content">
                           <children>
                                     <Label styleClass="label-bright" text="public description">
                                         <font>
                                             <Font name="System" size="16.0" />
                                         </font>
                                     </Label>                                                    
                                    <TextArea fx:id="pubDescField" promptText="Insert user's public description" styleClass="description" />
                                     <Label styleClass="label-bright" text="private description">
                                         <font>
                                             <Font name="System" size="16.0" />
                                         </font>
                                     </Label>
                                    <TextArea fx:id="privDescField" promptText="Insert user's private description" styleClass="description" />
                           </children>
                        </VBox>
                     </content>
                  </Tab>
                  <Tab closable="false" text="Request">
                     <content>
                            <VBox prefHeight="150.0" styleClass="aside_content">
                                <children>
                                    <Label graphicTextGap="0.0" styleClass="label-bright" text="unsolved requests">
                                        <font>
                                            <Font name="System" size="16.0" />
                                        </font>
                                    </Label>
                                    <ListView fx:id="requestsList">
                            
                        </ListView>
                                    <Label styleClass="label-bright" text="user tournaments list">
                                        <font>
                                            <Font name="System" size="16.0" />
                                        </font>
                                    </Label>
                                    <ListView fx:id="tournamentsList">
                                
                        </ListView>
                                </children>
                                <padding>
                                    <Insets bottom="5" left="20" right="5" top="10" />
                                </padding>
                            </VBox>
                     </content>
                  </Tab>
               </tabs>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </TabPane>    
            </HBox>
         <HBox fx:id="footer_section" styleClass="footer_section" />
            
        </VBox>
        
    </children>
</AnchorPane>
